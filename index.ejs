<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
    integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <style>
    body {
      background-color: #e2e9ef;
    }

    .container {
      max-width: 100-px;
      margin: 50px auto;
      padding: 20px;
      background-color: #fff;
      box-shadow: 100 2px 6px rgba(18, 3, 16, 0.1);
      border-radius: 20px;
    }

    h1 {
      font-size: 50px;
      font-weight: 1000;
      text-align: center;
      margin-bottom: 50px;
    }

    .form-inline {
      justify-content: center;
      margin-bottom: 50px;
    }

    .form-control {
      width: 70%;
    }

    .btn {
      width: 10%;
    }

    .table {

      margin-bottom: 50px;
    }
  </style>
  <title>URL Shrinker</title>
</head>


<body>
  <div class="container">
    <h1>URL Shrinker</h1>
    <form action="/shortUrls" method="POST" class="form-inline">
      <label for="fullUrl" class="sr-only">URL</label>
      <input required placeholder="Enter URL" type="url" name="fullUrl" id="fullUrl" class="form-control mr-2">
      <button class="btn btn-success" type="submit">Shrink</button>
    </form>
    <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Full URL</th>
          <th>Short URL</th>
          <th>Clicks</th>
        </tr>
      </thead>
      <tbody>
        <% shortUrls.forEach(shortUrl => { %>
        <tr>
          <td><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
          <td><a href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
          <td><%= shortUrl.clicks %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    </div>
  </div>
</body>

</html>
